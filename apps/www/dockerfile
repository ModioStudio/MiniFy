FROM node:22-alpine AS base

ENV PNPM_HOME=/pnpm
ENV PATH="${PNPM_HOME}:${PATH}"

RUN corepack enable && corepack prepare pnpm@9.15.4 --activate

WORKDIR /app

FROM base AS deps

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./
COPY apps/www/package.json ./apps/www/package.json

RUN pnpm install --frozen-lockfile --filter www...

FROM base AS builder

WORKDIR /app

COPY . .

ENV NEXT_TELEMETRY_DISABLED=1

RUN pnpm install --frozen-lockfile --filter www...
RUN pnpm --filter www build

FROM base AS runner

WORKDIR /app

ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME=0.0.0.0

COPY --from=builder /app/pnpm-lock.yaml ./pnpm-lock.yaml
COPY --from=builder /app/pnpm-workspace.yaml ./pnpm-workspace.yaml
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/apps/www/package.json ./apps/www/package.json
COPY --from=builder /app/apps/www/next.config.mjs ./apps/www/next.config.mjs
COPY --from=builder /app/apps/www/.next ./apps/www/.next
COPY --from=builder /app/apps/www/public ./apps/www/public

RUN pnpm install --frozen-lockfile --prod --filter www...

EXPOSE 3000

CMD ["pnpm", "--filter", "www", "start"]

