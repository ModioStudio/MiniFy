# Standalone Dockerfile for docs - can be built directly from apps/docs directory
# Build: docker build -t minify-docs .
# Run: docker run -p 3002:3002 minify-docs

FROM node:22-alpine AS builder

WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies using npm (standalone, no workspace needed)
RUN npm install

# Copy all source files (including nginx.conf)
COPY . .

# Build the docs
RUN npm run build

# Production image with nginx
FROM nginx:alpine AS runner

# Copy built assets from builder
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx config from builder (not from build context)
COPY --from=builder /app/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3002

CMD ["nginx", "-g", "daemon off;"]
