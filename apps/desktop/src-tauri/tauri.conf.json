{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MiniFy",
  "version": "0.1.0",
  "identifier": "com.modiostudio.minify",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MiniFy",
        "decorations": false,
        "minWidth": 400,
        "minHeight": 200,
        "resizable": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false,
        "scope": ["https://*.spotify.com/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.ico"]
  }
}
